{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "build hoekjec",
            "command": "C:/msys64/mingw64/bin/gcc.exe",
            "args": [
                "${workspaceFolder}\\src\\*.c",
                "-g",
                "-o",
                "${workspaceFolder}\\hoekjec.exe",
                "-I${workspaceFolder}\\include",
                "-lglfw3",
                "-lgdi32",
                "-lopengl32"
            ],
            "options": {
                "cwd": "C:/msys64/mingw64/bin"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}